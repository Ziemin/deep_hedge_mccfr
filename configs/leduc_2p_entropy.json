{
    "game": {
        "name": "leduc_poker",
        "params": {
            "players": 2
        }
    },
    "networks": {
        "player_units": [196, 196, 48],
        "baseline_units": [128, 128, 32]
    },
    "device": "cuda",
    "spec": {
        "max_steps": 5000000,
        "player_traversals": 64,
        "baseline_traversals": 16,
        "player_update_freq": 4,

        "player_lr_init": 0.01,
        "baseline_lr_init": 0.01,
        "player_lr_end": 0.000001,
        "baseline_lr_end": 0.000001,
        "decay_steps": 10000,
        "decay_rate": 0.95,
        "gradient_clipping_value": 1000,
        "logits_threshold": 2.0,
        "weight_decay": 0.0001,
        "entropy_cost": 0.1,

        "update_method": "hedge",
        "epsilon": 0.1
    }
}
